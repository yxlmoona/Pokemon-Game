<html lang="en" dir="ltr">
  <%- include('../partials/head.ejs')%>
  <body>
    <header>
      <h1>pokemon index</h1>
      <%- include('../partials/nav.ejs') %>
      <%for(let i = 0; i < logs.length; i++){%>
      <p>name : <%=logs[i].name%></p>
